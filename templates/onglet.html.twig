{% extends 'base.html.twig' %}

{% block body %}
    {% block menu %}
        {% include "components/navbar.html.twig" %}
    {% endblock %}

    <div class="mt-5 ml-3" data-masonry='{"percentPosition": true }'>
        {% for categorie in ong.ongletcategories %}
    <div class="onglet mt-5 ml-3">
        <h3 class="text-center mt-2">{{categorie.nom}}</h3>
        <hr class="ongletHr">
            {% for produit in categorie.produits %}
            <div class="d-flex justify-content-between">
                <div class="col-10 d-flex">
                    <p><span class="h4 text-uppercase prodid2">{{produit.nom}}</span></p>
                    <p class="ml-1 descid2">{{produit.description|raw }}</p>
                </div>
                <div class="d-flex">
                    <p class="prixStarter">{{produit.prix}}€</p>
                </div>
            </div>
                    {% endfor %}
    </div>
        {% endfor %}
    </div>
{% endblock %}
