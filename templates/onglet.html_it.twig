{% extends 'base.html.twig' %}

{% block body %}
    {% block menu %}
        {% include "components/navbar.html_it.twig" %}
    {% endblock %}

    <div class="mt-5 ml-3" data-masonry='{"percentPosition": true }'>
        {% for categorie in ong.ongletcategories %}
    <div class="onglet ml-3">
        <p class="titrecat2 text-center mt-2">{{categorie.nomIt}}</p>
        <hr class="ongletHr">
            {% for produit in categorie.produits %}
                <div class="d-flex justify-content-between ">
                    <p><span class="text-uppercase produit">{{produit.nomIt}}</span></p>
                    <p class="descid3">{{produit.descIt|raw }}</p>
                    <p class="prix">{{produit.prix}}</p>
                </div>
            {% endfor %}
    </div>
        {% endfor %}
    </div>
{% endblock %}