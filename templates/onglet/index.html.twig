{% extends 'base.html.twig' %}


{% block title %}Onglet index{% endblock %}

{% block body %}

    {% block menu %}
        {% include "components/navbar-admin.html.twig" %}
    {% endblock %}
    <h1>Onglet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for onglet in onglets %}
            <tr>
                <td>{{ onglet.id }}</td>
                <td>{{ onglet.nom }}</td>
                <td>
                    <a href="{{ path('onglet_show', {'id': onglet.id}) }}">show</a>
                    <a href="{{ path('onglet_edit', {'id': onglet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('onglet_new') }}">Create new</a>
{% endblock %}
