{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    {% set uber %}
        <img src="{{ asset('images/ubereats.png') }}" style="width: 75px">
    {% endset %}

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Photo</th>
                <th>Ubereats</th>
                <th>Deliveroo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                {# <td>{{ produit.categories.nom }}</td> #}
                <td>{{ produit.prix }}</td>
                <td>{{ produit.photo }}</td>
                <td>{{ produit.ubereats ? uber : 'NON' }}</td>
                <td>{{ produit.deliveroo ? 'Yes' : 'NON' }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('produit_edit', {'id': produit.id}) }}">Ã‰diter</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Ajouter un nouveau produit</a>
{% endblock %}
