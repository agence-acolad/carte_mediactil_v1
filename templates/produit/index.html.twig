{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    {% block menu %}
            {% include "components/navbar-admin.html.twig" %}
    {% endblock %}
    <h1 class="mt-5 text-center">Liste des produits</h1>

    {% set uber %}
        <img src="{{ asset('images/ubereats.png') }}" style="width: 75px">
    {% endset %}

    {% set deliveroo %}
        <img src="{{ asset('images/deliveroo.png') }}" style="width: 75px">
    {% endset %}
    <div class="container">
        <table class="table mt-5">
            <thead class="thead-dark">
                <tr class="text-center">
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Photo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr>
                    <td>{{ produit.nom| raw}}</td>
                    <td>{{ produit.description| raw}}</td>
                    <td>{{ produit.prix| raw}}</td>
                    <td><img src="{{asset('uploads/images/featured/' ~ produit.photo )}}" style="width: 90px;"></td>
                    <td class="d-flex">
                        <a class="btn btn-outline-info mr-2" href="{{ path('produit_edit', {'id': produit.id}) }}">Éditer</a>
                            {{ include('produit/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucun produit trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-center mb-4">
        <a class="btn btn-success" href="{{ path('produit_new') }}">Ajouter un nouveau produit</a>
    </div>

{% endblock %}
